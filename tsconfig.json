{
    "compilerOptions": {
        "target": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["components/*"],
            "@assets/*": ["assets/*"]
        },
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "jsx": "react"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
